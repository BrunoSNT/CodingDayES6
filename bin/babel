#!/usr/bin/env sh

THIS=$(basename $0)
DIR="$( cd -P "$( dirname "$0" )" && pwd )"
cd $DIR
cd ..
CURR_FOLDER=`pwd`

# Root
cd $CURR_FOLDER

# Babel
mkdir -p out
babel -m umd index.js -o out/index.js
babel -m umd src --out-dir out/src
babel -m umd node_modules/chunk/src/chunk.js -o out/chunk.js
cp node_modules/babel/polyfill.js out/browser-polyfill.js

echo "                                "
echo "< Babei... Yeahh!!             >"
echo "------------------------------  "
echo "        \   ^__^                "
echo "         \  (oo)\_______        "
echo "            (__)\       )\/\    "
echo "                ||----w |       "
echo "                ||     ||       "
echo "                                "

exit 0
